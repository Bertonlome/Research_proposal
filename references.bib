	author = {Liu, Jing and Gardi, Alessandro and Ramasamy, Subramanian and Lim, Yixiang and Sabatini, Roberto},
	month = nov,
	year = {2016},
	keywords = {Single pilot operations, Cognitive ergonomics, Human-machine interface and interaction, Decision support systems, Psychophysiological Monitoring},
	pages = {37--53},
	file = {ScienceDirect Snapshot:C\:\\Users\\benja\\Zotero\\storage\\2Z2E3XKU\\S0950705116303057.html:text/html},
